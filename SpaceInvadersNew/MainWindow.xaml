<Window x:Class="SpaceInvadersNew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceInvadersNew"
        mc:Ignorable="d"
        Title="Space Invaders" Height="500" Width="800" FocusManager.FocusedElement="{Binding ElementName=myCanvas}">
    <Canvas Name="myCanvas" Background="Black" Focusable="True" KeyDown="Canvas_KeyisDown" KeyUp="Canvas_KeyIsUp">
        <Label Foreground="White" Name="enemiesLeft" FontSize="16" FontWeight="ExtraBold" Canvas.Left="10" Canvas.Top="428">Enemies Left:</Label>

        <Rectangle Name="player1" Fill="White" Height="65" Width="55" Canvas.Left="361" Canvas.Top="394" RenderTransformOrigin="-0.679,0.497" />
        <Label Foreground="White" Content="Space Invaders" Canvas.Left="555" Canvas.Top="413"  FontSize="30" Width="227"/>
    </Canvas>
</Window>
